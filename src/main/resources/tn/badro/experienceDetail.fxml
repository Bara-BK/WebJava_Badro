<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.badro.Controllers.ExperienceDetailController" style="-fx-background-color: #f8f9fa;">
    <top>
        <VBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #307D91;">
                <padding>
                    <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
                </padding>
                <Button fx:id="btnBack" mnemonicParsing="false" onAction="#onBackClicked" style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@images/back_icon.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Label text="Experience Details" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="btnEdit" mnemonicParsing="false" onAction="#onEditClicked" style="-fx-background-color: white; -fx-text-fill: #307D91;" text="Edit" visible="false"/>
                <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#onDeleteClicked" style="-fx-background-color: white; -fx-text-fill: #e74c3c;" text="Delete" visible="false"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: transparent;">
            <VBox spacing="25.0">
                <padding>
                    <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
                </padding>
                
                <!-- Experience Content -->
                <VBox spacing="15.0" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1);">
                    <padding>
                        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                    </padding>
                    
                    <!-- Translation Bar -->
                    <HBox fx:id="translationBar" spacing="10.0" alignment="CENTER_LEFT" style="-fx-background-color: #f8f9fa; -fx-background-radius: 4; -fx-padding: 8;">
                        <Label text="Translate:" style="-fx-font-weight: bold; -fx-text-fill: #307D91;"/>
                        <ComboBox fx:id="translateComboBox" prefWidth="150.0"/>
                        <Button fx:id="btnTranslate" text="Translate" onAction="#onTranslateClicked"/>
                        <Button fx:id="btnResetTranslation" text="Reset" onAction="#onResetTranslationClicked"/>
                    </HBox>
                    
                    <Label fx:id="titleLabel" text="Experience Title" style="-fx-text-fill: #307D91;">
                        <font>
                            <Font name="System Bold" size="24.0" />
                        </font>
                    </Label>
                    
                    <HBox spacing="10.0" style="-fx-padding: 0 0 10 0;">
                        <Label fx:id="authorLabel" text="By User Name" style="-fx-text-fill: #495057; -fx-font-weight: bold;"/>
                        <Label text="•" style="-fx-text-fill: #6c757d;"/>
                        <Label fx:id="dateLabel" text="Date Posted" style="-fx-text-fill: #6c757d;"/>
                        <Label text="•" style="-fx-text-fill: #6c757d;"/>
                        <Label fx:id="locationLabel" text="Location" style="-fx-text-fill: #6c757d;"/>
                    </HBox>
                    
                    <Label fx:id="destinationLabel" text="Destination" style="-fx-text-fill: #307D91; -fx-background-color: #e6f7fc; -fx-padding: 4 12; -fx-background-radius: 50; -fx-font-weight: bold;" visible="false" />
                    
                    <StackPane style="-fx-background-color: #f8f9fa; -fx-background-radius: 4; -fx-padding: 5;">
                        <ImageView fx:id="experienceImage" fitWidth="600.0" preserveRatio="true" />
                    </StackPane>
                    
                    <TextArea fx:id="descriptionArea" editable="false" wrapText="true" prefHeight="150.0" 
                              style="-fx-control-inner-background: white; -fx-border-color: transparent; -fx-text-fill: #212529; -fx-font-size: 14px;" />
                    
                    <Separator />
                    
                    <HBox spacing="15.0" alignment="CENTER_LEFT">
                        <Button fx:id="btnLike" mnemonicParsing="false" onAction="#onLikeClicked" 
                                style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 4;">
                            <graphic>
                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@images/like_icon.png" />
                                </ImageView>
                            </graphic>
                        </Button>
                        <Label fx:id="likeCountLabel" text="0 likes" style="-fx-text-fill: #495057;"/>
                        <Label text="•" style="-fx-text-fill: #6c757d;"/>
                        <Label fx:id="commentCountLabel" text="0 comments" style="-fx-text-fill: #495057;"/>
                    </HBox>
                </VBox>
                
                <!-- Comments Section -->
                <VBox spacing="15.0" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1);">
                    <padding>
                        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                    </padding>
                    
                    <Label text="Comments" style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-text-fill: #307D91;" />
                    
                    <!-- Add Comment -->
                    <HBox spacing="10.0" style="-fx-padding: 0 0 15 0;">
                        <TextField fx:id="commentField" promptText="Add a comment..." HBox.hgrow="ALWAYS" 
                                  style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-padding: 8;"/>
                        <Button fx:id="btnComment" mnemonicParsing="false" onAction="#onCommentClicked" 
                                style="-fx-background-color: #307D91; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 20; -fx-background-radius: 4;" text="Post" />
                    </HBox>
                    
                    <Separator/>
                    
                    <!-- Comments List -->
                    <VBox fx:id="commentsContainer" spacing="15.0">
                        <!-- Comments will be added here dynamically -->
                    </VBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane> 