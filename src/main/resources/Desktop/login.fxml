<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" stylesheets="@../styles/auth.css" xmlns:fx="http://javafx.com/fxml" fx:controller="tn.badro.Controllers.LoginController">
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="20" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 3);">
            <padding>
                <Insets top="20" right="40" bottom="20" left="40"/>
            </padding>
            <Label text="BADRO" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4B9CD3;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox fx:id="userInfoSection" alignment="CENTER_RIGHT" spacing="10">
                <Label fx:id="userDisplayName" style="-fx-text-fill: #4B9CD3; -fx-font-size: 14px;"/>
            </HBox>
        </HBox>
    </top>

    <center>
        <HBox>
            <VBox styleClass="auth-sidebar" style="-fx-background-color: #4B9CD3; -fx-padding: 50;" prefWidth="400">
                <Label text="BADRO" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                <Region VBox.vgrow="ALWAYS"/>
                <VBox spacing="20">
                    <Label text="Welcome Back!" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                    <Label text="Sign in to access your account and manage your exchange programs." style="-fx-font-size: 16px; -fx-text-fill: #E8F1F8; -fx-wrap-text: true;" wrapText="true"/>
                </VBox>
            </VBox>

            <VBox alignment="CENTER" spacing="30" style="-fx-background-color: #F8FBFD;" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets top="50" right="100" bottom="50" left="100"/>
                </padding>
                
                <VBox spacing="20" maxWidth="400" style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                    <Label text="Sign In" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #4B9CD3;"/>
                    
                    <VBox spacing="5">
                        <Label text="Email" style="-fx-font-size: 14px; -fx-text-fill: #6C757D;"/>
                        <TextField fx:id="emailField" promptText="Enter your email" 
                                 style="-fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #E9ECEF; -fx-border-radius: 5;"/>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Password" style="-fx-font-size: 14px; -fx-text-fill: #6C757D;"/>
                        <PasswordField fx:id="passwordField" promptText="Enter your password"
                                     style="-fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #E9ECEF; -fx-border-radius: 5;"/>
                    </VBox>
                    
                    <Label fx:id="statusLabel" style="-fx-text-fill: #DC3545;"/>
                    
                    <Button text="Sign In" onAction="#handleLogin" 
                            style="-fx-background-color: #4B9CD3; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 20; -fx-background-radius: 5; -fx-cursor: hand;"/>
                    
                    <HBox alignment="CENTER" spacing="5">
                        <Label text="Don't have an account?" style="-fx-text-fill: #6C757D;"/>
                        <Button text="Register" onAction="#showRegister" 
                                style="-fx-background-color: transparent; -fx-text-fill: #4B9CD3; -fx-cursor: hand;"/>
                    </HBox>

                    <Button text="Forgot Password?" onAction="#showResetPasswordRequest" 
                            style="-fx-background-color: transparent; -fx-text-fill: #4B9CD3; -fx-font-size: 14px; -fx-padding: 0; -fx-cursor: hand;"/>
                    
                    <Button text="Return to Main Menu" onAction="#returnToMainMenu" 
                            style="-fx-background-color: transparent; -fx-border-color: #4B9CD3; -fx-text-fill: #4B9CD3; -fx-font-size: 14px; -fx-padding: 12 20; -fx-background-radius: 5; -fx-border-radius: 5; -fx-cursor: hand;"/>
                </VBox>
            </VBox>
        </HBox>
    </center>
</BorderPane>