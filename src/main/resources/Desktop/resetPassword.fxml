<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml" fx:controller="tn.badro.Controllers.PasswordResetController" style="-fx-padding: 40;" stylesheets="@../styles/auth.css">
    <Label text="Set New Password" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <Label text="Enter the token sent to your email and your new password." wrapText="true" style="-fx-font-size: 14px;"/>
    <TextField fx:id="tokenField" promptText="Reset Token" maxWidth="300"/>
    <PasswordField fx:id="newPasswordField" promptText="New Password" maxWidth="300"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" maxWidth="300"/>
    <Button text="Reset Password" onAction="#handleResetPassword" maxWidth="300" style="-fx-background-color: #4B9CD3; -fx-text-fill: white;"/>
    <Button text="Back to Login" onAction="#handleBackToLogin" maxWidth="300" style="-fx-background-color: transparent; -fx-border-color: #4B9CD3; -fx-text-fill: #4B9CD3;"/>
</VBox>
