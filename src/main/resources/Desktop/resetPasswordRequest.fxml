<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml" fx:controller="tn.badro.Controllers.PasswordResetController" style="-fx-padding: 40;" stylesheets="@../styles/auth.css">
    <Label text="Reset Password" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <Label text="Enter your email to receive a password reset token." wrapText="true" style="-fx-font-size: 14px;"/>
    <TextField fx:id="emailField" promptText="Email" maxWidth="300"/>
    <Button text="Send Reset Token" onAction="#handleSendEmail" maxWidth="300" style="-fx-background-color: #4B9CD3; -fx-text-fill: white;"/>
    <Button text="Back to Login" onAction="#handleBackToLogin" maxWidth="300" style="-fx-background-color: transparent; -fx-border-color: #4B9CD3; -fx-text-fill: #4B9CD3;"/>
</VBox>
