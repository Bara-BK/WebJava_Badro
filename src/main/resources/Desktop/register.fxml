<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" stylesheets="@/styles/auth.css" xmlns:fx="http://javafx.com/fxml" fx:controller="tn.badro.Controllers.RegisterController">
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="20" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 3);">
            <padding>
                <Insets top="20" right="40" bottom="20" left="40"/>
            </padding>
            <ImageView fitHeight="40" fitWidth="120" pickOnBounds="true" preserveRatio="true" >
                <image>
                    <Image url="@/icones/LOGO.png" />
                </image>
            </ImageView>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox fx:id="userInfoSection" alignment="CENTER_RIGHT" spacing="10">
                <Label fx:id="userDisplayName" style="-fx-text-fill: #4B9CD3; -fx-font-size: 14px;"/>
            </HBox>
        </HBox>
    </top>

    <center>
        <HBox>
            <VBox styleClass="auth-sidebar" style="-fx-background-color: #4B9CD3; -fx-padding: 50;" prefWidth="400">
                <ImageView fitHeight="60" fitWidth="180" pickOnBounds="true" preserveRatio="true" >
                    <image>
                        <Image url="@/icones/LOGO.png" />
                    </image>
                </ImageView>
                <Region VBox.vgrow="ALWAYS"/>
                <VBox spacing="20">
                    <Label text="Create Account" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                    <Label text="Join our community and start your journey with BADRO." style="-fx-font-size: 16px; -fx-text-fill: #E8F1F8; -fx-wrap-text: true;" wrapText="true"/>
                </VBox>
            </VBox>

            <VBox alignment="CENTER" spacing="30" style="-fx-background-color: #F8FBFD;" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets top="50" right="100" bottom="50" left="100"/>
                </padding>
                
                <VBox spacing="20" maxWidth="400" style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                    <Label text="Sign Up" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #4B9CD3;"/>
                    
                    <VBox spacing="5">
                        <Label text="First Name" style="-fx-font-size: 14px; -fx-text-fill: #6C757D;"/>
                        <TextField fx:id="prenomField" promptText="Enter your first name" 
                                 style="-fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #E9ECEF; -fx-border-radius: 5;"/>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Last Name" style="-fx-font-size: 14px; -fx-text-fill: #6C757D;"/>
                        <TextField fx:id="nomField" promptText="Enter your last name"
                                 style="-fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #E9ECEF; -fx-border-radius: 5;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Email" style="-fx-font-size: 14px; -fx-text-fill: #6C757D;"/>
                        <TextField fx:id="emailField" promptText="Enter your email"
                                 style="-fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #E9ECEF; -fx-border-radius: 5;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Phone Number" style="-fx-font-size: 14px; -fx-text-fill: #6C757D;"/>
                        <TextField fx:id="numtlfField" promptText="Enter your phone number"
                                 style="-fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #E9ECEF; -fx-border-radius: 5;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Age" style="-fx-font-size: 14px; -fx-text-fill: #6C757D;"/>
                        <TextField fx:id="ageField" promptText="Enter your age"
                                 style="-fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #E9ECEF; -fx-border-radius: 5;"/>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Password" style="-fx-font-size: 14px; -fx-text-fill: #6C757D;"/>
                        <PasswordField fx:id="passwordField" promptText="Enter your password"
                                     style="-fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #E9ECEF; -fx-border-radius: 5;"/>
                    </VBox>
                    
                    <Label fx:id="statusLabel" style="-fx-text-fill: #DC3545;"/>
                    
                    <Button text="Sign Up" onAction="#handleRegister" 
                            style="-fx-background-color: #4B9CD3; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 20; -fx-background-radius: 5; -fx-cursor: hand;"/>
                    
                    <HBox alignment="CENTER" spacing="5">
                        <Label text="Already have an account?" style="-fx-text-fill: #6C757D;"/>
                        <Button text="Sign In" onAction="#showLogin" 
                                style="-fx-background-color: transparent; -fx-text-fill: #4B9CD3; -fx-cursor: hand;"/>
                    </HBox>
                    
                    <Button text="Return to Main Menu" onAction="#returnToMainMenu" 
                            style="-fx-background-color: transparent; -fx-border-color: #4B9CD3; -fx-text-fill: #4B9CD3; -fx-font-size: 14px; -fx-padding: 12 20; -fx-background-radius: 5; -fx-border-radius: 5; -fx-cursor: hand;"/>
                </VBox>
            </VBox>
        </HBox>
    </center>
</BorderPane> 