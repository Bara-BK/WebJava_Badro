<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="universityListView" spacing="10" alignment="TOP_CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="tn.badro.Controllers.UniversityController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label fx:id="titleLabel" text="University Management" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        <Button fx:id="addButton" text="+ Add New University" onAction="#showCreateForm" style="-fx-background-color: #1a73e8; -fx-text-fill: white;" />
        <Button fx:id="generatePdfButton" text="Generate PDF Report" onAction="#generatePdfReport" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
    </HBox>
    
    <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <style>
            -fx-border-color: #ddd; -fx-border-width: 1px;
        </style>
    </TableView>
</VBox> 