<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: white;" xmlns:fx="http://javafx.com/fxml" fx:controller="tn.badro.Controllers.ApplicationManagementController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <!-- Header Section -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <VBox>
            <Label text="Exchange Program Applications" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4B9CD3;"/>
            <Label text="View and manage student applications for exchange programs" style="-fx-font-size: 14px; -fx-text-fill: #6C757D;"/>
        </VBox>
    </HBox>
    
    <!-- Filter & Search Bar -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Label text="Filter by status:" style="-fx-font-size: 14px;"/>
        <ComboBox fx:id="statusFilterComboBox" prefWidth="150"/>
        
        <Region HBox.hgrow="ALWAYS"/>
        
        <TextField fx:id="searchField" promptText="Search applications..." prefWidth="250"/>
        <Button fx:id="searchButton" text="Search" style="-fx-background-color: #4B9CD3; -fx-text-fill: white;"/>
    </HBox>
    
    <!-- Applications Table -->
    <TableView fx:id="applicationsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="100"/>
            <TableColumn fx:id="userColumn" text="Applicant" prefWidth="150"/>
            <TableColumn fx:id="programColumn" text="Program" prefWidth="150"/>
            <TableColumn fx:id="universityColumn" text="University" prefWidth="150"/>
            <TableColumn fx:id="dateAppliedColumn" text="Applied On" prefWidth="100"/>
            <TableColumn fx:id="startDateColumn" text="Start Date" prefWidth="100"/>
            <TableColumn fx:id="endDateColumn" text="End Date" prefWidth="100"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="200"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
    
    <!-- Summary Section -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label fx:id="totalApplicationsLabel" text="Total: 0 applications" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
    </HBox>
</VBox> 