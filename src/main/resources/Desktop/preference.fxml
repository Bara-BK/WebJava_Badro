<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.TilePane?>

<?import javafx.scene.control.ListView?>
<BorderPane fx:id="mainBorderPane" prefHeight="800.0" prefWidth="1200.0" stylesheets="@../styles/main.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.badro.Controllers.PreferenceController">

    <!-- Top Navigation Bar -->
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="20" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 3);">
            <padding>
                <Insets top="20" right="40" bottom="20" left="40"/>
            </padding>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Back to Main Menu" onAction="#returnToMainMenu" style="-fx-background-color: transparent; -fx-border-color: #4B9CD3; -fx-text-fill: #4B9CD3; -fx-font-size: 14px; -fx-padding: 5 15; -fx-background-radius: 5; -fx-border-radius: 5; -fx-cursor: hand;">
                     <graphic>
                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                            <Image url="@../icones/back.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
            <StackPane alignment="CENTER_RIGHT">
                <ImageView fx:id="NotificationIcon" accessibleRole="LIST_VIEW" fitHeight="30.0" fitWidth="30.0" onMouseClicked="#handleNotificationIconClick" pickOnBounds="true" preserveRatio="true">
                           <image>
                        <Image url="@../icones/notification.gif" />
                           </image>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                        </ImageView>
                <Label fx:id="notificationBadge" text="" visible="false" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 12px; -fx-background-radius: 10; -fx-padding: 2 6 2 6; -fx-border-radius: 10; -fx-border-width: 0;" StackPane.alignment="TOP_RIGHT" />
            </StackPane>
        </HBox>
    </top>
    
    <!-- Main Content - Fills entire available space -->
    <center>
        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" style="-fx-tab-min-width: 120; -fx-tab-max-width: 120; -fx-tab-min-height: 40; -fx-background-color: #F8FBFD;">
            <tabs>
                <Tab text="My Preferences">
                    <BorderPane>
                        <top>
                            <VBox spacing="10" style="-fx-padding: 20;">
                                <Label text="Preferences &amp; Matching" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #4B9CD3;"/>
                                <Label text="Manage your preferences and find matching opportunities" style="-fx-font-size: 14px; -fx-text-fill: #6C757D;"/>
                                
                                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10 0 0 0;">
                                    <Label text="Your Current Preferences" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #4B9CD3;"/>
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Button fx:id="addNewBtn" text="Add New" onAction="#switchToAddTab"
                                            style="-fx-background-color: #4B9CD3; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16; -fx-background-radius: 5; -fx-cursor: hand;">
                     <graphic>
                                            <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                                                    <Image url="@../icones/add.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                                </HBox>
                            </VBox>
                        </top>
                        
                        <!-- Scrollable area that takes up all available space -->
                        <center>
                            <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent; -fx-background: transparent; -fx-padding: 0 20 20 20;">
                                <TilePane fx:id="preferencesContainer" hgap="20" vgap="20" prefColumns="3">
                                    <!-- Preferences will be added here dynamically -->
                                </TilePane>
                            </ScrollPane>
                        </center>
                    </BorderPane>
                </Tab>
                
                <Tab fx:id="tabAdd" text="Add Preference">
                    <BorderPane>
                        <top>
                            <VBox spacing="10" style="-fx-padding: 20;">
                                <Label text="Preferences &amp; Matching" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #4B9CD3;"/>
                                <Label text="Create New Preference" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #4B9CD3;"/>
                            </VBox>
                        </top>
                        
                        <center>
                            <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent; -fx-background: transparent; -fx-padding: 0 20 20 20;">
                                <VBox spacing="20">
                                    <HBox spacing="40" HBox.hgrow="ALWAYS">
                                        <!-- Left Column -->
                                        <VBox spacing="20" HBox.hgrow="ALWAYS">
                                            <VBox spacing="5">
                                                <Label text="Climat" style="-fx-font-weight: bold;"/>
                                                <TextField fx:id="Climat" promptText="Temperate, Winter, Cold, or Tropical"/>
                                                <Label text="Example: Temperate, Winter, Cold, Tropical" style="-fx-font-size: 12px; -fx-text-fill: #6C757D;"/>
                                            </VBox>
                                            
                                            <VBox spacing="5">
                                                <Label text="Country" style="-fx-font-weight: bold;"/>
                                                <ComboBox fx:id="countryComboBox" promptText="Select country" maxWidth="Infinity"/>
                                            </VBox>
                                            
                                            <VBox spacing="5">
                                                <Label text="Domain" style="-fx-font-weight: bold;"/>
                                                <TextField fx:id="Domain" promptText="Study/Professional domain"/>
                                                <Label text="Example: Philosophy, Agriculture, Information, Education" style="-fx-font-size: 12px; -fx-text-fill: #6C757D;"/>
                                            </VBox>
                                            
                                            <VBox spacing="5">
                                                <Label text="Preferred Language" style="-fx-font-weight: bold;"/>
                                                <HBox spacing="15">
                                                    <RadioButton fx:id="englishRadio" text="English" selected="true"/>
                                                    <RadioButton fx:id="frenchRadio" text="French"/>
                                                    <RadioButton fx:id="arabicRadio" text="Arabic"/>
                                                </HBox>
                                            </VBox>
                                        </VBox>
                                        
                                        <!-- Right Column -->
                                        <VBox spacing="20" HBox.hgrow="ALWAYS">
                                            <VBox spacing="5">
                                                <Label text="Teaching Mode" style="-fx-font-weight: bold;"/>
                                                <HBox spacing="15">
                                                    <RadioButton fx:id="onlineRadio" text="Online" selected="true"/>
                                                    <RadioButton fx:id="inPersonRadio" text="In-person classes"/>
                                                </HBox>
                                            </VBox>
                                            
                                            <VBox spacing="5">
                                                <Label text="University Type" style="-fx-font-weight: bold;"/>
                                                <TextField fx:id="UniversityType" promptText="Type of university"/>
                                            </VBox>
                                            
                                            <VBox spacing="5">
                                                <Label text="Cultural Activities" style="-fx-font-weight: bold;"/>
                                                <TextField fx:id="culturalAct" promptText="Preferred cultural activities"/>
                                                <Label text="Example: Museum visits, Volunteering, Music, Photography" style="-fx-font-size: 12px; -fx-text-fill: #6C757D;"/>
                                            </VBox>
                                            
                                            <VBox spacing="5">
                                                <Label text="Language Level" style="-fx-font-weight: bold;"/>
                                                <TextField fx:id="levelTextField" promptText="Your language proficiency level"/>
                                            </VBox>
                                        </VBox>
                                    </HBox>
                                    
                                    <HBox alignment="CENTER" spacing="15" style="-fx-padding: 30 0 0 0;">
                                        <Button fx:id="addPreferenceButton" onAction="#handleAddPreference" text="Add Preference" 
                                                style="-fx-background-color: #4B9CD3; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 5; -fx-cursor: hand;">
                     <graphic>
                                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                                                        <Image url="@../icones/add.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                                        <Button onAction="#modifierPreference" text="Update" 
                                                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 5; -fx-cursor: hand;">
                     <graphic>
                                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                                                        <Image url="@../icones/update.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                                        <Button fx:id="clearForm" text="Clear Form" onAction="#clearForm"
                                                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 5; -fx-cursor: hand;">
                     <graphic>
                                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                                                        <Image url="@../icones/clear.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                                    </HBox>
            </VBox>
                            </ScrollPane>
                                       </center>
                                    </BorderPane>
                       </Tab>
                    </tabs>
                  </TabPane>
         </center>
    
    <!-- Footer - Now only appears once -->
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #4B9CD3; -fx-padding: 15;">
            <Label text="Â© 2024 BADRO. All rights reserved." style="-fx-text-fill: white; -fx-font-size: 14px;"/>
        </HBox>
    </bottom>
      </BorderPane>
