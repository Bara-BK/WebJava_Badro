<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" stylesheets="@../styles/auth.css" xmlns:fx="http://javafx.com/fxml" fx:controller="tn.badro.Controllers.ProfileController">
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="20" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 3);">
            <padding>
                <Insets top="20" right="40" bottom="20" left="40"/>
            </padding>
            <Label text="BADRO" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4B9CD3;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox fx:id="userInfoSection" alignment="CENTER_RIGHT" spacing="10">
                <Label fx:id="userDisplayName" style="-fx-text-fill: #4B9CD3; -fx-font-size: 14px;"/>
            </HBox>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent; -fx-background-insets: 0; -fx-padding: 0;">
            <VBox alignment="CENTER" spacing="30" style="-fx-background-color: #F8FBFD;" minHeight="800">
                <padding>
                    <Insets top="50" right="100" bottom="50" left="100"/>
                </padding>
                
                <VBox spacing="20" maxWidth="600" style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                    <HBox alignment="CENTER_LEFT" spacing="20">
                        <ImageView fx:id="profileImage" fitWidth="100" fitHeight="100" style="-fx-background-color: #E9ECEF; -fx-background-radius: 50;"/>
                        <VBox spacing="5">
                            <Label fx:id="profileName" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4B9CD3;"/>
                            <Label fx:id="profileRole" style="-fx-font-size: 16px; -fx-text-fill: #6C757D;"/>
                        </VBox>
                    </HBox>

                    <Separator style="-fx-background-color: #E9ECEF;"/>

                    <TitledPane text="Personal Information" expanded="true" style="-fx-text-fill: #4B9CD3; -fx-font-weight: bold;">
                        <VBox spacing="15">
                            <GridPane hgap="20" vgap="15">
                                <columnConstraints>
                                    <ColumnConstraints minWidth="150"/>
                                    <ColumnConstraints hgrow="ALWAYS"/>
                                </columnConstraints>

                                <Label text="First Name:" style="-fx-text-fill: #6C757D;"/>
                                <TextField fx:id="firstNameField" GridPane.columnIndex="1" 
                                         style="-fx-padding: 8; -fx-background-radius: 5; -fx-border-color: #E9ECEF; -fx-border-radius: 5;"/>

                                <Label text="Last Name:" style="-fx-text-fill: #6C757D;" GridPane.rowIndex="1"/>
                                <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                                         style="-fx-padding: 8; -fx-background-radius: 5; -fx-border-color: #E9ECEF; -fx-border-radius: 5;"/>

                                <Label text="Email:" style="-fx-text-fill: #6C757D;" GridPane.rowIndex="2"/>
                                <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2"
                                         style="-fx-padding: 8; -fx-background-radius: 5; -fx-border-color: #E9ECEF; -fx-border-radius: 5;"/>

                                <Label text="Phone:" style="-fx-text-fill: #6C757D;" GridPane.rowIndex="3"/>
                                <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="3"
                                         style="-fx-padding: 8; -fx-background-radius: 5; -fx-border-color: #E9ECEF; -fx-border-radius: 5;"/>

                                <Label text="Age:" style="-fx-text-fill: #6C757D;" GridPane.rowIndex="4"/>
                                <TextField fx:id="ageField" GridPane.columnIndex="1" GridPane.rowIndex="4"
                                         style="-fx-padding: 8; -fx-background-radius: 5; -fx-border-color: #E9ECEF; -fx-border-radius: 5;"/>
                            </GridPane>
                        </VBox>
                    </TitledPane>

                    <TitledPane text="Security" expanded="true" style="-fx-text-fill: #4B9CD3; -fx-font-weight: bold;">
                        <VBox spacing="15">
                            <GridPane hgap="20" vgap="15">
                                <columnConstraints>
                                    <ColumnConstraints minWidth="150"/>
                                    <ColumnConstraints hgrow="ALWAYS"/>
                                </columnConstraints>

                                <Label text="Current Password:" style="-fx-text-fill: #6C757D;"/>
                                <PasswordField fx:id="currentPasswordField" GridPane.columnIndex="1"
                                             style="-fx-padding: 8; -fx-background-radius: 5; -fx-border-color: #E9ECEF; -fx-border-radius: 5;"/>

                                <Label text="New Password:" style="-fx-text-fill: #6C757D;" GridPane.rowIndex="1"/>
                                <PasswordField fx:id="newPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                                             style="-fx-padding: 8; -fx-background-radius: 5; -fx-border-color: #E9ECEF; -fx-border-radius: 5;"/>

                                <Label text="Confirm Password:" style="-fx-text-fill: #6C757D;" GridPane.rowIndex="2"/>
                                <PasswordField fx:id="confirmPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="2"
                                             style="-fx-padding: 8; -fx-background-radius: 5; -fx-border-color: #E9ECEF; -fx-border-radius: 5;"/>
                            </GridPane>
                        </VBox>
                    </TitledPane>

                    <Label fx:id="statusLabel" style="-fx-text-fill: #DC3545;"/>
                    
                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Button text="Save Changes" onAction="#handleSaveProfile" 
                                style="-fx-background-color: #4B9CD3; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 5; -fx-cursor: hand;"/>
                        <Button text="Cancel" onAction="#handleCancel" 
                                style="-fx-background-color: transparent; -fx-border-color: #4B9CD3; -fx-text-fill: #4B9CD3; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 5; -fx-border-radius: 5; -fx-cursor: hand;"/>
                    </HBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane> 