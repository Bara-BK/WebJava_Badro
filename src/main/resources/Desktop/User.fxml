<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" alignment="CENTER" stylesheets="@../styles/table.css"
      xmlns:fx="http://javafx.com/fxml" fx:controller="tn.badro.Controllers.UserController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="20">
        <!-- Form Section -->
        <VBox spacing="10" prefWidth="300">
            <Label text="User Information" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            
            <GridPane vgap="10" hgap="10">
                <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nomField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                
                <Label text="Prenom:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="prenomField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                
                <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                
                <Label text="Password:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <PasswordField fx:id="passwordField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                
                <Label text="Telephone:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="numtlfField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                
                <Label text="Age:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="ageField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                
                <Label text="Roles:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <TextField fx:id="rolesField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Add" onAction="#handleAddUser" style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
                <Button text="Update" onAction="#handleUpdateUser" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                <Button text="Delete" onAction="#handleDeleteUser" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                <Button text="Clear" onAction="#clearFields" style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
            </HBox>
        </VBox>

        <!-- Table Section -->
        <VBox spacing="10" VBox.vgrow="ALWAYS">
            <Label text="Users List" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            
            <TableView fx:id="userTable" VBox.vgrow="ALWAYS" onMouseClicked="#handleSelectUser">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="nomColumn" text="Nom" prefWidth="100"/>
                    <TableColumn fx:id="prenomColumn" text="Prenom" prefWidth="100"/>
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="150"/>
                    <TableColumn fx:id="numtlfColumn" text="Telephone" prefWidth="100"/>
                    <TableColumn fx:id="ageColumn" text="Age" prefWidth="50"/>
                    <TableColumn fx:id="rolesColumn" text="Roles" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </HBox>
</VBox> 